{
    "coc.preferences.formatOnSave": true,
    "inlayHint.enable": false,
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": [
                "c",
                "cpp",
                "cc",
                "hpp",
                "h"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim",
                ".git"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cc",
                "hpp",
                "h"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim",
                ".git"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    }
}
